---
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";

import { getRelativeLocaleUrl } from "astro:i18n";

const currentLang = Astro.currentLocale || "en";


const pageTitle = "Angel Mejia - Portafolio";
const pageDescription = "Desarrollador Full Stack especializado en crear experiencias web excepcionales";
const pageImage = "/portfolio-metatag.jpg"; 
const siteUrl = "https://angelmejia.dev/"; 
---

<html lang={currentLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/taza.png" />
    
    <!-- Meta Tags BÃ¡sicos -->
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <meta name="keywords" content="desarrollador, full stack, portafolio, programador, web" />
    <meta name="author" content="Angel Mejia" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content='/portfolio-metatag.jpg' />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Portafolio de Angel Mejia" />
    <meta property="og:site_name" content="Angel Mejia Portafolio" />
    <meta property="og:locale" content={currentLang === "es" ? "es_ES" : "en_US"} />
    
    
    <!-- Otros Meta Tags -->
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#000000" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={siteUrl} />
  </head>
  
  <body
    class="bg-background text-foreground w-[375px] min-h-screen m-auto md:w-[672px] xl:w-[1112px]"
  >
    <Navbar />
    <slot />
  </body>
</html>